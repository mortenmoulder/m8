@using m8.Web.Models;
<div class="@CssClass">
    <h2>Contact</h2>

    <p class="fw-bold m-0">Location: Ikast, Denmark</p>
    <p class="fw-bold m-0">Email: <a href="mailto:morten@m8.dk" class="text-light">morten@m8.dk</a></p>

    <div class="row justify-content-center column-gap-3 mt-4">
        @foreach (var profile in SocialProfiles)
        {
            <div class="col-2">
                <a href="@profile.Url" target="_blank"><img src="@profile.ImagePath" class="img-fluid" alt="@profile.AltText" title="@profile.AltText" /></a>
            </div>
        }
    </div>
</div>